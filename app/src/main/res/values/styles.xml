<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="android:layout_weight">1</item>
        <item name="np_dividerColor">@color/colorPrimary</item>
        <item name="np_height">48dp</item>
        <item name="np_orientation">horizontal</item>
        <item name="np_selectedTextColor">@color/colorPrimary</item>
        <item name="np_textColor">@color/colorPrimary</item>
        <item name="np_textSize">18sp</item>
    </style>

</resources>
